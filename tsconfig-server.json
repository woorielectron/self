{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    // "preserveValueImports": false,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "include": [
    "src/server.ts",    
  ],
  "exclude": [
    "src/app/**/*",
    ".next/types/**/*.ts",
    "node_modules"
  ]
}
